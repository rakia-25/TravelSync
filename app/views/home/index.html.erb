<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5">
  <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="w-100" src="img/radison.jpg" alt="Radison Hotel">
        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
          <div class="p-3" style="max-width: 700px;">
            <h6 class="section-title text-white text-uppercase mb-3 animated slideInDown">Bienvenue sur Travel_Sync</h6>
            <h3 class="display-6 text-white mb-4 animated slideInDown">Une plateforme de gestion des voyages, hôtels et voitures</h3>
            <a href="#hotels" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Voir les hôtels</a>
            <a href="#services" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Nos services</a>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img class="w-100" src="img/carousel-2.jpg" alt="Voyages">
        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
          <div class="p-3" style="max-width: 700px;">
            <h6 class="section-title text-white text-uppercase mb-3 animated slideInDown">Explorez le monde</h6>
            <h3 class="display-6 text-white mb-4 animated slideInDown">Des destinations inoubliables à portée de clic</h3>
            <a href="#trips" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Nos circuits</a>
            <a href="#cars" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Nos voitures</a>
          </div>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Précédent</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#header-carousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Suivant</span>
    </button>
  </div>
</div>
<!-- Carousel End -->
<!-- About Start -->
<section id="about" class="container-xxl py-5">
  <div class="container">
    <div class="row g-5 align-items-center">
      <div class="col-lg-6">
        <h6 class="section-title text-start text-primary text-uppercase">A propos</h6>
        <h1 class="mb-4">Bienvenue sur <span class="text-primary">TravelSync</span></h1>
        <p class="mb-4">Vivez une expérience de voyage unique et simplifiée. Profitez de services fiables et personnalisés pour explorer vos destinations en toute sérénité. Réservez en quelques clics — hôtels, voitures, circuits et plus encore.</p>
        <div class="row g-3 pb-4">
          <div class="col-sm-4">
            <div class="border rounded text-center p-4">
              <i class="fa fa-hotel fa-2x text-primary mb-2"></i>
              <h2 class="mb-1" data-toggle="counter-up">40</h2>
              <p class="mb-0">Hôtels</p>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="border rounded text-center p-4">
              <i class="fa fa-users-cog fa-2x text-primary mb-2"></i>
              <h2 class="mb-1" data-toggle="counter-up">90</h2>
              <p class="mb-0">Prestataires</p>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="border rounded text-center p-4">
              <i class="fa fa-users fa-2x text-primary mb-2"></i>
              <h2 class="mb-1" data-toggle="counter-up">123</h2>
              <p class="mb-0">Clients</p>
            </div>
          </div>
        </div>
        <a class="btn btn-primary py-3 px-5 mt-2" href="#hotels">Explorer</a>
      </div>
      <div class="col-lg-6">
        <div class="row g-3">
          <div class="col-6 text-end">
            <img class="img-fluid rounded w-75 wow zoomIn" src="img/about-1.jpg" style="margin-top: 25%;">
          </div>
          <div class="col-6 text-start">
            <img class="img-fluid rounded w-100 wow zoomIn" src="img/about-2.jpg">
          </div>
          <div class="col-6 text-end">
            <img class="img-fluid rounded w-50 wow zoomIn" src="img/about-3.jpg">
          </div>
          <div class="col-6 text-start">
            <img class="img-fluid rounded w-75 wow zoomIn" src="img/about-4.jpg">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- About End -->
<%= render 'sections/hotels' %>
<%= render 'sections/trips' %>
<%= render 'sections/cars' %>
<!-- Call to Action Start -->
<section class="bg-primary text-white py-5">
  <div class="container text-center">
    <h2 class="mb-4">Prêt à commencer votre aventure avec TravelSync ?</h2>
    <p class="mb-4 fs-5">Inscrivez-vous dès maintenant pour profiter des meilleures offres sur hôtels, voyages et locations de voitures.</p>
    <a href="<%= new_user_registration_path %>" class="btn btn-light btn-lg px-5 me-3">Inscription</a>
  </div>
</section>
<!-- Call to Action End -->
<section class="container-xxl py-5">
  <div class="container">
    <div class="text-center mb-5">
      <h6 class="section-title text-primary text-uppercase">Témoignages</h6>
      <h1>Ce que nos clients disent de nous</h1>
    </div>
    <div class="row g-4">
      <% @testimonials = [
          { name: "Amina", role: "Voyageuse", photo: "img/testimonial-1.jpg", text: "TravelSync a rendu mon voyage au Niger simple et inoubliable !" },
          { name: "Souleymane", role: "Client fidèle", photo: "img/testimonial-2.jpg", text: "Service client au top et offres adaptées à mes besoins." },
          { name: "Fatou", role: "Exploratrice", photo: "img/testimonial-3.jpg", text: "Je recommande TravelSync pour la réservation de voiture, fiable et rapide." }
        ] %>
      <% @testimonials.each do |t| %>
        <div class="col-md-4 wow fadeInUp" data-wow-delay="0.1s">
          <div class="bg-light rounded p-4 shadow-sm h-100 d-flex flex-column">
            <div class="d-flex align-items-center mb-3">
              <img src="<%= t[:photo] %>" alt="<%= t[:name] %>" class="rounded-circle me-3" style="width:60px; height:60px; object-fit:cover;">
              <div>
                <h5 class="mb-0"><%= t[:name] %></h5>
                <small class="text-muted"><%= t[:role] %></small>
              </div>
            </div>
            <p class="mb-0 fst-italic flex-grow-1">“<%= t[:text] %>”</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<!-- Testimonials End -->