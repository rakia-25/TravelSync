<!-- Hotel Start -->
<div class="container-xxl py-5">
  <div class="container">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
      <h6 class="section-title text-center text-primary text-uppercase">Nos Hôtels</h6>
      <h1 class="mb-5">Découvrez nos <span class="text-primary text-uppercase">Hôtels</span></h1>
    </div>

    <div class="row g-4">
      <% if @hotels.present? %>
        <% @hotels.each_with_index do |hotel, index| %>
          <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="<%= (index * 0.2).round(1) %>s">
            <div class="room-item shadow rounded overflow-hidden">
              <div class="position-relative">
                <% if hotel.images.attached? %>
                  <%= image_tag hotel.images.first.variant(resize_to_limit: [400, 250]), class: "img-fluid", alt: hotel.name %>
                <% else %>
                  <%= image_tag "default-hotel.jpg", class: "img-fluid", alt: "Hôtel par défaut" %>
                <% end %>
                <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4"><%= hotel.stars %> ★</small>
              </div>
              <div class="p-4 mt-2">
                <div class="d-flex justify-content-between mb-3">
                  <h5 class="mb-0"><%= hotel.name %></h5>
                  <div class="ps-2">
                    <% hotel.stars.to_i.times do %>
                      <small class="fa fa-star text-primary"></small>
                    <% end %>
                  </div>
                </div>
                <p class="text-body mb-3"><%= truncate(hotel.description, length: 100) %></p>
                <p class="text-muted"><i class="fa fa-map-marker-alt text-primary me-2"></i><%= hotel.city %></p>
                <div class="d-flex justify-content-between">
                  <%= link_to "Voir détails", customer_hotel_path(hotel), class: "btn btn-sm btn-primary rounded py-2 px-4" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center">Aucun hôtel disponible pour le moment.</p>
      <% end %>
    </div>
  </div>
</div>
<!-- Hotel end -->

 <!-- Trip Start -->
  <div class="container-xxl py-5">
  <div class="container">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
      <h6 class="section-title text-center text-primary text-uppercase">Nos Circuits</h6>
      <h1 class="mb-5">Découvrez nos <span class="text-primary text-uppercase">Voyages organisés</span></h1>
    </div>

    <div class="row g-4">
      <% if @trips.present? %>
        <% @trips.each_with_index do |trip, index| %>
          <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="<%= (index * 0.2).round(1) %>s">
            <div class="room-item shadow rounded overflow-hidden">
              <div class="position-relative">
                <%# Image placeholder ou image du voyage si disponible %>
                <% if trip.images.attached? %>
                  <%= image_tag trip.images.variant(resize_to_limit: [400, 250]), class: "img-fluid", alt: trip.title %>
                <% else %>
                  <%= image_tag "/img/voyage.jpeg", class: "img-fluid", alt: "Image de circuit" %>
                <% end %>
                <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">
                  <%= trip.duration %> jours
                </small>
              </div>
              <div class="p-4 mt-2">
                <h5 class="mb-1 text-primary"><%= trip.title %></h5>
                <p class="mb-2 text-muted"><i class="fa fa-map-marker-alt me-2"></i><%= trip.departureCity %> → <%= trip.destinationCity %></p>
                <p class="text-muted mb-2"><i class="fa fa-calendar-alt me-2"></i>Départ : <%= trip.departureDate.strftime("%d/%m/%Y") %></p>
                <p class="text-muted"><i class="fa fa-calendar-check me-2"></i>Retour : <%= trip.returnDate.strftime("%d/%m/%Y") %></p>
                <div class="d-flex justify-content-between mt-3">
                  <%= link_to "Voir Détails", customer_trip_path(trip), class: "btn btn-sm btn-primary rounded py-2 px-4" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center">Aucun circuit organisé pour l’instant.</p>
      <% end %>
    </div>
  </div>
</div>

  <!-- trip end -->
  <!-- ✅ Section Voitures -->
  <div class="container-xxl py-5">
  <div class="container">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
      <h6 class="section-title text-center text-primary text-uppercase">Location de voitures</h6>
      <h1 class="mb-5">Choisissez votre <span class="text-primary text-uppercase">véhicule idéal</span></h1>
    </div>

    <div class="row g-4">
      <% if @cars.present? %>
        <% @cars.each_with_index do |car, index| %>
          <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="<%= (index * 0.2).round(1) %>s">
            <div class="room-item shadow rounded overflow-hidden">
              <div class="position-relative">
                <% if car.images.attached? %>
                  <%= image_tag car.images.variant(resize_to_limit: [400, 250]), class: "img-fluid", alt: "#{car.brand} #{car.model}" %>
                <% else %>
                  <%= image_tag "/img/voyage.webp", class: "img-fluid", alt: "Voiture par défaut" %>
                <% end %>
                <% if car.price %>
                  <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">
                    <%= number_to_currency(car.price, unit: "", precision: 0) %> FCFA / jour
                  </small>
                <% end %>
              </div>

              <div class="p-4 mt-2">
                <h5 class="mb-2"><%= car.brand %> – <%= car.model %></h5>
                <p class="text-muted mb-2"><i class="fa fa-car-side me-2"></i>Type : <%= car.name %></p>
                <p class="text-muted mb-2"><i class="fa fa-cogs me-2"></i><%= truncate(car.options, length: 80) %></p>
                <p class="text-muted"><i class="fa <%= car.available ? 'fa-check-circle text-success' : 'fa-times-circle text-danger' %> me-2"></i><%= car.available ? "Disponible" : "Indisponible" %></p>

                <div class="d-flex justify-content-between mt-3">
                  <%= link_to "Voir Détails", customer_car_path(car), class: "btn btn-sm btn-primary rounded py-2 px-4" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center">Aucune voiture disponible pour l’instant.</p>
      <% end %>
    </div>
  </div>
</div>

