<h1>Bienvenue dans votre espace agence de location</h1>
<h1 class="text-2xl font-bold">Liste des voitures</h1>

<%= link_to "Nouvelle voiture", new_car_path, class: "btn bg-blue-500 text-white px-4 py-2" %>

<ul class="mt-4 space-y-4">
  <% @cars.each do |car| %>
    <li class="border p-4 rounded shadow">
      <strong><%= car.brand %> <%= car.model %></strong> - <%= car.price %> FCFA
      <div class="mt-2">
        <%= link_to "Voir", car_path(car), class: "text-blue-500" %> |
        <%= link_to "Modifier", edit_car_path(car), class: "text-yellow-500" %> |
        <%= form_with url: car_path(car), method: :delete do %>
            <button type="submit">
              supprimer
            </button>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
<h1>Bienvenue dans votre espace agence de location</h1>
