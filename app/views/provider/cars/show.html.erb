<div class="container py-5 d-flex justify-content-center">
  <div class="card shadow p-4 w-100" style="max-width: 600px;">
    <h1 class="text-center mb-4 fs-3 fw-bold">
      <%= @car.brand %> <%= @car.model %>
    </h1>

    <ul class="list-group list-group-flush mb-4">
      <li class="list-group-item">
        <strong>Type :</strong> <%= @car.name %>
      </li>
      <li class="list-group-item">
        <strong>Prix :</strong> <%= number_with_delimiter(@car.price) %> FCFA
      </li>
      <li class="list-group-item">
        <strong>Options :</strong> <%= @car.options.presence || "Non spécifiées" %>
      </li>
      <li class="list-group-item">
        <strong>Disponible :</strong>
        <span class="badge bg-<%= @car.available ? 'success' : 'secondary' %>">
          <%= @car.available ? "Oui" : "Non" %>
        </span>
      </li>
    </ul>

    <div class="d-flex justify-content-between">
      <%= link_to "Modifier", edit_provider_car_path(@car), class: "btn btn-warning" %>
      <%= link_to "Retour", dashboard_provider_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
