<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <!-- En-tête du formulaire -->
    <div class="p-6 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 rounded-lg bg-blue-50 text-blue-600 flex items-center justify-center">
          <i class="fas fa-hotel text-lg"></i>
        </div>
        <h2 class="text-xl font-semibold text-gray-800">
          <%= action_name == 'new' ? 'Nouveau hôtel' : 'Modifier hôtel' %>
        </h2>
      </div>
      <p class="mt-2 text-sm text-gray-500">
        Remplissez les informations ci-dessous pour <%= action_name == 'new' ? 'créer' : 'modifier' %> votre hôtel
      </p>
    </div>

    <!-- Corps du formulaire -->
    <div class="p-6">
      <%= form_with(model: hotel, url: hotel.new_record? ? provider_hotels_path : provider_hotel_path(hotel), local: true, method: hotel.new_record? ? :post : :patch, html: { class: "space-y-6", multipart: true }) do |f| %>
        
        <% if @hotel.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-lg">
            <div class="flex items-center mb-2">
              <i class="fas fa-exclamation-circle text-red-500 mr-2"></i>
              <h5 class="text-red-700 font-medium">
                <%= pluralize(@hotel.errors.count, "erreur") %> empêchent la sauvegarde :
              </h5>
            </div>
            <ul class="list-disc pl-5 text-sm text-red-600">
              <% @hotel.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Informations principales -->
        <div class="space-y-6">
          <div class="bg-blue-50 p-4 rounded-lg mb-6">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <i class="fas fa-info-circle text-blue-500 text-xl"></i>
              </div>
              <div>
                <h4 class="text-sm font-medium text-blue-800">Informations principales</h4>
                <p class="text-sm text-blue-600">Ces informations seront affichées en premier aux voyageurs</p>
              </div>
            </div>
          </div>

          <div class="relative">
            <div class="flex items-center space-x-2 mb-1">
              <i class="fas fa-hotel text-gray-400"></i>
              <%= f.label :name, "Nom de l'hôtel", class: "text-sm font-medium text-gray-700" %>
            </div>
            <p class="text-xs text-gray-500 mb-2">Choisissez un nom accrocheur et mémorable</p>
            <%= f.text_field :name, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors", placeholder: "Saisissez le nom de l'hôtel" %>
          </div>

          <div class="relative">
            <div class="flex items-center space-x-2 mb-1">
              <i class="fas fa-align-left text-gray-400"></i>
              <%= f.label :description, "Description", class: "text-sm font-medium text-gray-700" %>
            </div>
            <p class="text-xs text-gray-500 mb-2">Décrivez l'ambiance, le style et les points forts de votre établissement</p>
            <%= f.text_area :description, rows: 4, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors", placeholder: "Décrivez votre établissement..." %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative">
              <div class="flex items-center space-x-2 mb-1">
                <i class="fas fa-star text-gray-400"></i>
                <%= f.label :stars, "Nombre d'étoiles", class: "text-sm font-medium text-gray-700" %>
              </div>
              <p class="text-xs text-gray-500 mb-2">Classification officielle de l'établissement</p>
              <%= f.number_field :stars, min: 1, max: 5, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors", placeholder: "Ex: 3" %>
            </div>

            <div class="relative">
              <div class="flex items-center space-x-2 mb-1">
                <i class="fas fa-concierge-bell text-gray-400"></i>
                <%= f.label :service, "Services", class: "text-sm font-medium text-gray-700" %>
              </div>
              <p class="text-xs text-gray-500 mb-2">Listez les principaux services proposés</p>
              <%= f.text_field :service, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors", placeholder: "Ex: Wifi, Piscine, Restaurant..." %>
            </div>
          </div>
        </div>

        <!-- Localisation -->
        <div class="space-y-6 pt-6 border-t border-gray-100">
          <div class="bg-green-50 p-4 rounded-lg mb-6">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <i class="fas fa-map-marker-alt text-green-500 text-xl"></i>
              </div>
              <div>
                <h4 class="text-sm font-medium text-green-800">Localisation</h4>
                <p class="text-sm text-green-600">Aidez les voyageurs à trouver facilement votre établissement</p>
              </div>
            </div>
          </div>
          
          <div class="relative">
            <div class="flex items-center space-x-2 mb-1">
              <i class="fas fa-map-marked-alt text-gray-400"></i>
              <%= f.label :address, "Adresse complète", class: "text-sm font-medium text-gray-700" %>
            </div>
            <p class="text-xs text-gray-500 mb-2">Indiquez l'adresse exacte de votre établissement</p>
            <%= f.text_field :address, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors", placeholder: "Numéro et nom de rue" %>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="relative">
              <div class="flex items-center space-x-2 mb-1">
                <i class="fas fa-city text-gray-400"></i>
                <%= f.label :city, "Ville", class: "text-sm font-medium text-gray-700" %>
              </div>
              <p class="text-xs text-gray-500 mb-2">Nom de la ville où se situe l'hôtel</p>
              <%= f.text_field :city, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors", placeholder: "Nom de la ville" %>
            </div>

            <div class="relative">
              <div class="flex items-center space-x-2 mb-1">
                <i class="fas fa-location-arrow text-gray-400"></i>
                <%= f.label :gps, "Coordonnées GPS", class: "text-sm font-medium text-gray-700" %>
              </div>
              <p class="text-xs text-gray-500 mb-2">Pour un placement précis sur la carte</p>
              <%= f.text_field :gps, class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors", placeholder: "Latitude, Longitude" %>
            </div>
          </div>
        </div>

        <!-- Photos -->
        <div class="space-y-4 pt-6 border-t border-gray-100">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Photos de l'hôtel</h3>
          
          <div class="flex items-center justify-center w-full">
            <label class="w-full flex flex-col items-center px-4 py-6 bg-white rounded-lg border-2 border-gray-300 border-dashed cursor-pointer hover:bg-gray-50 transition-colors">
              <div class="flex flex-col items-center justify-center pt-5 pb-6">
                <i class="fas fa-cloud-upload-alt text-3xl text-gray-400 mb-3"></i>
                <p class="mb-2 text-sm text-gray-500">
                  <span class="font-semibold">Cliquez pour ajouter</span> ou glissez et déposez
                </p>
                <p class="text-xs text-gray-500">PNG, JPG, GIF jusqu'à 10MB</p>
              </div>
              <%= f.file_field :images, multiple: true, direct_upload: true, class: "hidden" %>
            </label>
          </div>
        </div>

        <!-- Boutons d'action -->
        <div class="flex flex-col sm:flex-row-reverse gap-3 pt-6 border-t border-gray-100">
          <%= f.submit "Enregistrer", class: "w-full sm:w-auto px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
          
          <%= link_to dashboard_provider_path, class: "w-full sm:w-auto px-6 py-3 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors text-center" do %>
            Retour au tableau de bord
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
