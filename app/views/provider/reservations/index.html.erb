<div class="max-w-7xl mx-auto p-6">
  <!-- En-tête -->
  <div class="bg-white rounded-xl shadow-sm overflow-hidden mb-6">
    <div class="p-6 border-b border-gray-100 bg-gradient-to-r from-gray-50 to-white">
      <div class="flex items-center space-x-3">
        <div class="w-10 h-10 rounded-lg bg-blue-50 text-blue-600 flex items-center justify-center">
          <i class="fas fa-calendar-check text-lg"></i>
        </div>
        <div>
          <h1 class="text-xl font-semibold text-gray-800">Réservations reçues</h1>
          <p class="mt-1 text-sm text-gray-500">
            Gérez les réservations de vos services
          </p>
        </div>
      </div>
    </div>

    <!-- Liste des réservations -->
    <div class="p-6">
      <% if @reservations.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr class="bg-gray-50">
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Période</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @reservations.each do |reservation| %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <!-- Service -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0">
                        <% if reservation.reservable_type == "Room" %>
                          <i class="fas fa-bed text-blue-500"></i>
                        <% elsif reservation.reservable_type == "Car" %>
                          <i class="fas fa-car text-green-500"></i>
                        <% elsif reservation.reservable_type == "Trip" %>
                          <i class="fas fa-plane text-purple-500"></i>
                        <% end %>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900">
                          <% if reservation.reservable_type == "Room" %>
                            Chambre
                          <% elsif reservation.reservable_type == "Car" %>
                            Voiture : <%= reservation.reservable.name %>
                          <% elsif reservation.reservable_type == "Trip" %>
                            Voyage : <%= reservation.reservable.title %>
                          <% end %>
                        </div>
                        <% if reservation.reservable_type == "Room" %>
                          <div class="text-sm text-gray-500">
                            <%= reservation.reservable.hotel.name %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </td>

                  <!-- Client -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-8 w-8 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-user text-gray-500"></i>
                      </div>
                      <div class="ml-3">
                        <div class="text-sm text-gray-900"><%= reservation.user.email %></div>
                      </div>
                    </div>
                  </td>

                  <!-- Période -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <div class="flex items-center space-x-2">
                        <i class="fas fa-calendar text-gray-400"></i>
                        <span>
                          <%= reservation.start_date.present? ? l(reservation.start_date) : "-" %>
                        </span>
                      </div>
                      <div class="flex items-center space-x-2 mt-1">
                        <i class="fas fa-calendar-check text-gray-400"></i>
                        <span>
                          <%= reservation.end_date.present? ? l(reservation.end_date) : "-" %>
                        </span>
                      </div>
                    </div>
                  </td>

                  <!-- Statut -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% status_class = case reservation.status
                        when "pending"
                          "bg-yellow-100 text-yellow-800"
                        when "confirmed"
                          "bg-green-100 text-green-800"
                        when "rejected"
                          "bg-red-100 text-red-800"
                        else
                          "bg-gray-100 text-gray-800"
                        end %>
                    <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_class %>">
                      <%= reservation.status.capitalize %>
                    </span>
                  </td>

                  <!-- Actions -->
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <% if reservation.pending? %>
                      <div class="flex justify-end space-x-2">
                        <%= button_to provider_reservation_path(reservation, status: "confirmed"),
                            method: :patch,
                            class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                          <i class="fas fa-check mr-1"></i> Confirmer
                        <% end %>

                        <%= button_to provider_reservation_path(reservation, status: "rejected"),
                            method: :patch,
                            class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                          <i class="fas fa-times mr-1"></i> Rejeter
                        <% end %>
                      </div>
                    <% else %>
                      <span class="text-gray-500 italic text-sm">Action traitée</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-20 h-20 mx-auto bg-gray-50 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-calendar text-gray-300 text-3xl"></i>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-2">Aucune réservation</h3>
          <p class="text-gray-500">Vous n'avez pas encore reçu de réservations</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
