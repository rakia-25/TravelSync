<div class="max-w-lg mx-auto mt-12 bg-white shadow-md rounded-lg p-8">
  <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">Créer un compte</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <!-- Prénom -->
    <div class="mb-4">
      <%= f.label :first_name, "Prénom", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :first_name, autocomplete: "given-name", class: "w-full px-4 py-2 border rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <!-- Nom -->
    <div class="mb-4">
      <%= f.label :last_name, "Nom", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :last_name, autocomplete: "family-name", class: "w-full px-4 py-2 border rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <!-- Téléphone -->
    <div class="mb-4">
      <%= f.label :phone, "Téléphone", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :phone, autocomplete: "tel", class: "w-full px-4 py-2 border rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <!-- Email -->
    <div class="mb-4">
      <%= f.label :email, "Adresse e-mail", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <!-- Mot de passe -->
    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-gray-500 mb-1 block">(<%= @minimum_password_length %> caractères minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <!-- Confirmation mot de passe -->
    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirmation du mot de passe", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <!-- Rôle -->
    <div class="mb-4">
      <%= f.label :role, "Rôle", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :role,
          User.roles.keys.reject { |r| r == "admin" }.map { |r| [r.humanize.capitalize, r] },
          prompt: "Choisissez un rôle",
          class: "w-full px-4 py-2 border rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <!-- Bouton inscription -->
    <div class="mt-6">
      <%= f.submit "S'inscrire", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition" %>
    </div>
  <% end %>
  <!-- Liens supplémentaires -->
  <div class="mt-4 text-center text-sm text-gray-600">
    <%= render "devise/shared/links" %>
  </div>
</div>
