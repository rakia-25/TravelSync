<br><br><br>
<h2 class="text-center mb-4">CONNEXION</h2>

<div class="d-flex justify-content-center align-items-center">
  <div class="col-md-6 col-lg-5">
    <div class="wow fadeInUp" data-wow-delay="0.2s">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="row g-3">

          <div class="col-12">
            <div class="form-floating">
              <%= f.email_field :email, class: "form-control", id: "email", placeholder: "Email", autofocus: true, autocomplete: "email" %>
              <%= f.label :email, "Email", for: "email" %>
            </div>
          </div>

          <div class="col-12">
            <div class="form-floating">
              <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Password", autocomplete: "current-password" %>
              <%= f.label :password, "Password", for: "password" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="col-12">
              <div class="form-check">
                <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
                <%= f.label :remember_me, "Remember me", class: "form-check-label", for: "remember_me" %>
              </div>
            </div>
          <% end %>

          <div class="col-12">
            <%= f.submit "Se connecter", class: "btn btn-primary w-100 py-3" %>
          </div>
        </div>

      <% end %>

      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
