<div class="container d-flex justify-content-center my-5">
  <div class="col-md-8 col-lg-6 bg-white p-4 rounded shadow">
    
    <h2 class="fs-4 fw-semibold text-center mb-4">Modifier la réservation</h2>

    <%= form_with(model: [:users, @reservation], local: true) do |form| %>
      <div class="mb-3">
        <%= form.label :start_date, "Date de début", class: "form-label fw-semibold" %>
        <%= form.date_field :start_date, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :end_date, "Date de fin", class: "form-label fw-semibold" %>
        <%= form.date_field :end_date, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :status, "Statut", class: "form-label fw-semibold" %>
        <%= form.select :status, options_for_select([["En attente", "pending"], ["Annulée", "cancelled"]], @reservation.status), class: "form-select" %>
      </div>

      <div class="text-end">
        <%= form.submit "Enregistrer", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>
