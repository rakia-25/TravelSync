<div class="max-w-6xl mx-auto mt-10 px-4">
  <h1 class="text-3xl font-bold text-center text-indigo-700 mb-8">Liste des circuits</h1>
  <div class="overflow-x-auto">
    <table class="min-w-full bg-white shadow rounded-lg overflow-hidden">
      <thead class="bg-indigo-600 text-white text-left text-sm uppercase">
        <tr>
          <th class="px-6 py-3">Titre</th>
          <th class="px-6 py-3">Thème</th>
          <th class="px-6 py-3">Durée</th>
          <th class="px-6 py-3">Départ</th>
          <th class="px-6 py-3">Actions</th>
        </tr>
      </thead>
      <tbody class="text-gray-700 text-sm divide-y divide-gray-200">
        <% @trips.each do |trip| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4 font-medium"><%= trip.title %></td>
            <td class="px-6 py-4"><%= trip.theme %></td>
            <td class="px-6 py-4"><%= trip.duration %> jours</td>
            <td class="px-6 py-4"><%= trip.departureDate.strftime("%d/%m/%Y") if trip.departureDate %></td>
            <td class="px-6 py-4 space-x-2">
              <%= link_to "Voir", customer_trip_path(trip), class: "inline-block bg-gray-200 hover:bg-gray-300 text-gray-800 px-3 py-1 rounded text-sm" %>
              <% if trip.departureDate && trip.departureDate >= Date.today %>
                <%= button_to "Réserver", customer_trip_bookings_path(trip), method: :post, class: "inline-block bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm" %>
              <% else %>
                <span class="text-gray-400 italic text-sm">Date dépassée</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
