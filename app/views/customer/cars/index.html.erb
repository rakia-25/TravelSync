<h1 class="text-3xl font-extrabold text-center text-gray-900 mb-8">
  Liste des voitures disponibles
</h1>
<% if @cars.any? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 px-4 max-w-7xl mx-auto">
    <% @cars.each do |car| %>
      <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
        <h3 class="text-xl font-semibold text-gray-800 mb-2">
          <%= car.brand %> <span class="text-indigo-600"><%= car.model %></span>
        </h3>
        <p class="text-sm text-gray-600 mb-4">
          Prix par jour : <span class="font-semibold text-gray-900"><%= number_to_currency(car.price, unit: "FCFA ") %></span>
        </p>
        <div class="flex space-x-3">
          <%= link_to "Voir détails", customer_car_path(car), class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition" %>
          <%= link_to "Réserver", new_customer_car_booking_path(car), class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-center text-gray-500 italic mt-10">
    Aucune voiture disponible pour le moment.
  </p>
<% end %>
