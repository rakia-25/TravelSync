<div class="max-w-6xl mx-auto mt-10 px-4">
  <h1 class="text-3xl font-bold text-center text-indigo-700 mb-8">Mes Réservations</h1>
  <% if @reservations.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white rounded-lg shadow-md overflow-hidden">
        <thead class="bg-indigo-600 text-white text-sm uppercase">
          <tr>
            <th class="px-4 py-3 text-left">Service</th>
            <th class="px-4 py-3 text-left">Type</th>
            <th class="px-4 py-3 text-left">Détails</th>
            <th class="px-4 py-3 text-left">Statut</th>
            <th class="px-4 py-3 text-left">Réservé le</th>
          </tr>
        </thead>
        <tbody class="text-sm text-gray-700 divide-y divide-gray-200 bg-white">
          <% @reservations.each do |reservation| %>
            <tr class="hover:bg-gray-50 transition">
              <!-- Type de service -->
              <td class="px-4 py-3 font-medium">
                <%= reservation.reservable_type.capitalize %>
              </td>
              <!-- Détail du service -->
              <td class="px-4 py-3">
                <% case reservation.reservable_type %>
                <% when "Room" %>
                  <%= reservation.reservable.type_room %>
                <% when "Car" %>
                  <%= reservation.reservable.model %>
                <% when "Trip" %>
                  <%= reservation.reservable.title %>
                <% else %>
                  N/A
                <% end %>
              </td>
              <!-- Lien vers les détails -->
              <td class="px-4 py-3">
                <%= link_to "Voir détails", customer_reservation_path(reservation),
                    class: "text-indigo-600 hover:underline text-sm font-medium" %>
              </td>
              <!-- Statut -->
              <td class="px-4 py-3">
                <% status_class = case reservation.status
                  when "confirmed" then "text-green-600"
                  when "pending" then "text-yellow-600"
                  when "canceled" then "text-red-600"
                  else "text-gray-500"
                end %>
                <span class="font-semibold <%= status_class %>">
                  <%= reservation.status.capitalize %>
                </span>
              </td>
              <!-- Date -->
              <td class="px-4 py-3">
                <%= reservation.created_at.strftime("%d/%m/%Y %H:%M") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-center text-gray-600 italic mt-6">Vous n'avez aucune réservation pour le moment.</p>
  <% end %>
</div>
