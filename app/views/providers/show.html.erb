<div class="container my-5 bg-white p-5 shadow rounded">
  <h2 class="text-center text-primary fw-bold mb-4">Mon Profil Prestataire</h2>
  <div class="row mb-4">
    <div class="col-md-6">
      <p><strong>Nom :</strong> <%= current_user.first_name %> <%= current_user.last_name %></p>
      <p><strong>Email :</strong> <%= current_user.email %></p>
      <p><strong>Téléphone :</strong> <%= current_user.phone %></p>
    </div>
    <div class="col-md-6">
      <p><strong>Rôle :</strong> <%= current_user.role.capitalize %></p>
      <p><strong>Type de prestataire :</strong> <%= @provider.type_provider.humanize %></p>
      <p><strong>Entreprise :</strong> <%= @provider.business %></p>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-md-6">
      <p><strong>Adresse :</strong> <%= @provider.address %></p>
    </div>
    <div class="col-md-6">
      <p><strong>Statut :</strong>
        <span class="badge bg-success">Actif</span>
      </p>
    </div>
  </div>
  <div class="text-center mt-4">
    <%= link_to "Modifier mon profil", edit_provider_path(@provider), class: "btn btn-outline-primary rounded-pill px-4" %>
    <%= link_to "Retour", dashboard_provider_path, class: "btn btn-secondary rounded-pill px-4 ms-2" %>
  </div>
</div>
