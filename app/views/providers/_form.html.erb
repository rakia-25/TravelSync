<%= form_with(model: provider,url: provider_path, local: true) do |form| %>
  <% if provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(provider.errors.count, "erreur") %> empêchent la sauvegarde :</h2>
      <ul>
        <% provider.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :business, "Nom de l'entreprise" %><br>
    <%= form.text_field :business %>
  </div>
  <div>
    <%= form.label :type_provider, "Type de prestataire" %><br>
    <%= form.select :type_provider, Provider.type_providers.keys.map { |w| [w.humanize, w] }, prompt: "Sélectionnez un type" %>
  </div>
  <div>
    <%= form.label :address, "Adresse" %><br>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
